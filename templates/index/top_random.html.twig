{% extends 'base.html.twig' %}

{% block title %}The best games{% endblock %}

{% block body %}
    <h1>{{ 'Top random game'|upper }}</h1>

    {% if games %}
        <h3>The best games:</h3>
        <div class="games">
            <ul>
                {% for game in games %}
                    <li>{{ loop.index }}. {{ game }}</li>
                {% endfor %}
            </ul>
        </div>
    {% else %}
        {{ include('no_result.html.twig') }}
    {% endif %}
{% endblock %}