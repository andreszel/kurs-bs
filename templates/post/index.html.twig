{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <h1>Posts</h1>
    <a href="{{ path('app_post_create') }}" class="btn btn-sm btn-primary">Utw√≥rz nowy post</a>
    <div class="posts">
        {% if posts %}
            <ul>
                {% for post in posts %}
                    <li>{{ post.title }} <small>(Comments: {{ post.comments|length }})</small> - <a href="{{ path('app_post_show', {'slug': post.slug}) }}">details</a></li>
                {% endfor %}
            </ul>
        {% else %}
            <h3>Lista jest pusta!</h3>
        {% endif %}
    </div>
{% endblock %}